<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="uk.ac.ebi.pride.proteomes.web.client.resources.Resources"/>

    <ui:style>
        .legend {
            list-style: none;
            padding: 0;

        }

        .legend li {
            display: inline-block;
            margin-right: 10px;
            padding: 0;
        }

        .legend span {
            float: left;
            width: 12px;
            height: 12px;
            margin:2px;
            padding-right: 1px;

        }

        /* your colors */
        .legend .modification {
            width: 0;
            height: 0;
            border-left: 7px solid transparent;
            border-right: 7px solid transparent;
            border-bottom: 12px solid red;
        }

    </ui:style>


    <g:HTMLPanel ui:field="panel">
        <ul class="{style.legend}">
            <li>
                <span class="{style.modification}"/>
                Modification
            </li>
            <li>
                <span class="{resources.style.uniqueToProteinColor}"/>
                Peptide unique to the protein
            </li>
            <li>
                <span class="{resources.style.uniqueToUpEntryColor}"/>
                Peptide unique to UniProt entry
            </li>
            <li>
                <span class="{resources.style.uniqueToGeneColor}"/>
                Peptide unique to proteins of the same gene
            </li>
            <li>
                <span class="{resources.style.nonUniquePeptideColor}"/>
                Peptide non unique
            </li>
        </ul>
    </g:HTMLPanel>
</ui:UiBinder>

