<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field="resources" type="uk.ac.ebi.pride.proteomes.web.client.resources.Resources"/>


    <ui:style>
        .horizontal {
            float: left;
        }

        .description {
            width: 79%;
        }

        .summary {
            vertical-align: middle;
        }

        .item {
            width: 200px;
            height: 30px;
            padding: 3px;
            margin-top: 3px;
            margin-bottom: 3px;
            text-align: center;
            vertical-align: middle;
            line-height: 30px;
        }

        .item a {
            color: #fff;
            text-shadow: #461746 1px 1px;
        }

        /* your colors */

        .label {
            font-weight: bold;
        }

        .circle {
            width: 28px;
            height: 28px;
            background: whitesmoke;
            -moz-border-radius: 14px;
            -webkit-border-radius: 14px;
            border-radius: 14px;
            display: inline-block;
        }

        .content {
            color: #461746;
            text-shadow: #c5d1e9 1px 1px;
            text-align: center;
            vertical-align: middle;
            line-height: 28px;
            margin: 0;
        }

    </ui:style>


    <g:FlowPanel>
        <g:HTMLPanel>
            <h1>
                <g:Anchor ui:field="title"/>
            </h1>

        </g:HTMLPanel>

        <g:HTMLPanel addStyleNames="{style.horizontal} {style.description}">
            <h2>
                <g:Label ui:field="name"/>
            </h2>
            <p>
                <g:InlineLabel addStyleNames="{style.label}">UniProt Name</g:InlineLabel>
                <g:InlineLabel ui:field="altId"/>
                <br/>
                <g:InlineLabel addStyleNames="{style.label}">Species</g:InlineLabel>
                <g:InlineLabel ui:field="species"/>
                <br/>
                <g:InlineLabel addStyleNames="{style.label}">Gene (UniProt)</g:InlineLabel>
                <g:InlineLabel ui:field="geneSymbol"/>
                <br/>
                <g:InlineLabel addStyleNames="{style.label}">Protein Evidence</g:InlineLabel>
                <g:InlineLabel ui:field="proteinEvidence"/>
            </p>
            <p>
                <g:FlowPanel ui:field="attributes"/>
            </p>
        </g:HTMLPanel>

        <g:FlowPanel addStyleNames="{style.horizontal} {style.summary}">
            <g:HTMLPanel addStyleNames="{style.item} {resources.style.uniqueToProteinBox}">
                <g:InlineLabel>Unique Peptides</g:InlineLabel>
                <g:FlowPanel addStyleNames="{style.circle}">
                    <g:FlowPanel addStyleNames="{style.content}">
                        <g:InlineLabel ui:field="uniquePeptideCount"/>
                    </g:FlowPanel>
                </g:FlowPanel>

            </g:HTMLPanel>
            <g:SimplePanel addStyleNames="{style.item} {resources.style.uniqueToUpEntryBox}">
                <g:Anchor ui:field="upGroupLink"/>
            </g:SimplePanel>
            <g:SimplePanel addStyleNames="{style.item} {resources.style.uniqueToGeneBox}">
                <g:Anchor ui:field="geneGroupLink"/>
            </g:SimplePanel>
            <g:SimplePanel addStyleNames="{style.item} {resources.style.nonUniquePeptideBox}">
                <g:InlineLabel>Shared Peptides</g:InlineLabel>
            </g:SimplePanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>