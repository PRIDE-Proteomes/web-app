<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:HTMLPanel>
        <g:VerticalPanel horizontalAlignment="left" ui:field="vPanel">
            <g:HTMLPanel>
                <h2>
                <g:Label ui:field="title"/>
                </h2>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <p>
                <g:Label ui:field="description"/>
                </p>
            </g:HTMLPanel>
            <g:HTMLPanel>
                <p>
                <g:FlowPanel ui:field="attributes"/>
                </p>
            </g:HTMLPanel>
        </g:VerticalPanel>
    </g:HTMLPanel>
</ui:UiBinder>